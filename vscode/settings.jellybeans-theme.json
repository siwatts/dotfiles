{
    "window.zoomLevel": 1,
    "editor.fontFamily": "'Hack', 'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 13,
    "editor.cursorBlinking": "solid",
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            "newOperator": "#8197bf",
            "enumMember": "#e8e8d3",
            //"macro": "#cf6a4c", // Gets NULL which we want constant red like vim, but also clobbers all other macro definitions
            //"macro": "#d08356", // Twilight.vim constant, alternative to above
            //"parameter": "#8fbfdc"
        }
    },
    "editor.tokenColorCustomizations": {
        "strings": "#99ad6a",
        "comments": "#888888",
        //"functions": "#e8e8d3",
        "functions": "#fad07a",
        "keywords": "#8197bf",
        "numbers": "#cf6a4c",
        "types": "#ffb964",
        //"types": "#e8e8d3",
        "variables": "#c6b6ee",
        "semanticHighlighting": true,
        "textMateRules": [
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#e8e8d3"
                    //"foreground": "#c6b6ee"
                }
            },
            {
                "scope": "variable.language.this.cpp",
                "settings": {
                    "foreground": "#8197bf"
                }
            },
            {
                "scope": "storage.type",
                "settings": {
                    "foreground": "#8fbfdc"
                }
            },
            {
                "scope": "storage.type.built-in.primitive.cpp",
                "settings": {
                    "foreground": "#ffb964"
                }
            },
            {
                "scope": "storage.type.primitive.cpp",
                "settings": {
                    "foreground": "#ffb964"
                }
            },
            {
                "scope": "storage.type.namespace",
                "settings": {
                    "foreground": "#8fbfdc"
                }
            },
            {
                "scope": "storage.type.modifier.access.control", // public.cpp, private, and protected
                "settings": {
                    "foreground": "#8197bf"
                }
            },
            {
                "scope": "entity.name.scope-resolution",
                "settings": {
                    "foreground": "#e8e8d3"
                }
            },
            {
                "scope": "entity.name.namespace",
                "settings": {
                    "foreground": "#e8e8d3"
                }
            },
            {
                "scope": "keyword.control.directive",
                "settings": {
                    "foreground": "#8fbfdc"
                }
            },
            {
                "scope": "entity.name.function.preprocessor",
                "settings": {
                    "foreground": "#8fbfdc"
                }
            }            ,
            {
                "scope": "keyword.other.using",
                "settings": {
                    "foreground": "#8197bf"
                }
            },
            {
                "scope": "constant.character.escape",
                "settings": {
                    "foreground": "#799d6a"
                }
            },
            {
                "scope": "constant.language",
                "settings": {
                    "foreground": "#cf6a4c"
                }
            },
            {
                "scope": "storage.modifier",
                "settings": {
                    "foreground": "#ffb964"
                }
            },
            {
                "scope": "storage.modifier.pointer",
                "settings": {
                    "foreground": "#c6b6ee"
                }
            },
            {
                "scope": "storage.modifier.specifier.const.cpp",
                "settings": {
                    "foreground": "#c59f6f"
                }
            },
            {
                "scope": "storage.modifier.inline.cpp",
                "settings": {
                    "foreground": "#c59f6f"
                }
            },
            {
                "scope": "storage.modifier.reference.cpp",
                "settings": {
                    "foreground": "#8fbfdc"
                }
            },
            {
                "scope": "storage.modifier.pointer.cpp",
                "settings": {
                    "foreground": "#8fbfdc"
                }
            },
            {
                "scope": "keyword.operator.new.cpp",
                "settings": {
                    "foreground": "#8197bf"
                }
            },
            {
                "scope": "keyword.operator.delete.cpp",
                "settings": {
                    "foreground": "#8197bf"
                }
            },
            {
                "scope": "constant.language.NULL.cpp", // Overridden by semantic "macro"
                "settings": {
                    "foreground": "#cf6a4c"
                }
            },
        ]
    },
    "workbench.colorCustomizations": {
        "editor.background": "#151515",
        "editor.foreground": "#e8e8d3",
        "editor.selectionBackground": "#404040"
    },
}
