"" Nofrils:
"let g:nofrils_strbackgrounds=1
"let g:nofrils_heavycomments=1
"let g:nofrils_heavylinenumbers=1

"let g:zenburn_high_Contrast=1

color default
"color jellybeans
"color wombat256mod
"color desert256
"color twilight256
"color dracula
"color zenburn
"color lucius
"color PaperColor
"color gruvbox
"color triplejelly
"color nofrils-dark

set background=dark
"set background=light

" Mappings

" Disable middle mouse
map <MiddleMouse> <Nop>
imap <MiddleMouse> <Nop>
map <2-MiddleMouse> <Nop>
imap <2-MiddleMouse> <Nop>
map <3-MiddleMouse> <Nop>
imap <3-MiddleMouse> <Nop>
map <4-MiddleMouse> <Nop>
imap <4-MiddleMouse> <Nop>

" Scrolling
nmap <Up> 
nmap <Down> 
nmap <Left> 5
nmap <Right> 5

nmap <Space> <Nop>
"let mapleader=" "
map <Space> <Leader>
map <Leader>y "+y
map <Leader>Y "+y$
"map <Leader>d "+d
"map <Leader>D "+D
"map <Leader>x "+x
"map <Leader>X "+X
"map <Leader>c "+c
"map <Leader>C "+C
"map <Leader>s "+s
"map <Leader>S "+S
map <Leader>p "+p
map <Leader>P "+P

nmap <C-Enter> "+p
imap <C-Enter> <C-R>+

nmap <Leader>w :w<CR>
nmap <Leader>q :q<CR>
nmap <Leader>Q :qa<CR>
nmap <Leader>x :wq<CR>

nmap <Leader>s :Vex<CR>
nmap <Leader>v :vnew<CR>
nmap <Leader>d :diffthis<CR><C-w>w:diffthis<CR><C-w>w
nmap <Leader>e :Ex<CR>

nmap <Leader>o o<ESC>o
nmap <Leader>O O<ESC>O
nmap <Leader><CR> o<ESC>o<ESC>O

nmap <Leader>h 5h
nmap <Leader>j 5j
nmap <Leader>k 5k
nmap <Leader>l 5l

nmap <Leader>c o// 
nmap <Leader>C O// 
nmap <Leader>t o// TODO: 
nmap <Leader>T O// TODO: 

"nmap <Leader>s i r
"nmap <Leader>S a r
nmap <Leader>i i r
nmap <Leader>a a r

" Convert property into assignment.
nmap <Leader>n ^WWElD^dwdWA = , // p==

nnoremap Y y$
nnoremap S ^C

nmap // I// <Esc>$
vmap // :v/^$/norm 0i//
nmap <Leader>// ^dw

vmap y ygv<Esc>
vmap <CR> "+y
vmap <Leader>y "+y

nmap <CR> o<Esc>
nmap <S-Enter> O<Esc>
imap <S-Enter> O

" Mash jk to return to normal mode.
"imap jj <Esc>
imap jk <Esc>
imap kj <Esc>
"imap kk 

nmap n nzz
nmap N Nzz

" Enter to return to normal mode. Shift-Enter or Enter to return to insert with newline.
"nmap <S-Enter> o<Esc>
"imap <CR> <Esc>
"inoremap <S-Enter> <CR>

nmap <F4> "=strftime("%Y-%m-%dT%H:%M:%S.0000000Z")<CR>p
imap <F4> =strftime("%Y-%m-%dT%H:%M:%S.0000000Z")<CR>
nmap <F3> "=strftime("%d/%m/%Y %H:%M:%S")<CR>p
imap <F3> =strftime("%d/%m/%Y %H:%M:%S")<CR>
nmap <F5> "=strftime("%d/%m/%Y %H:%M")<CR>p
imap <F5> =strftime("%d/%m/%Y %H:%M")<CR>

vmap i :norm I
vmap a :norm A
