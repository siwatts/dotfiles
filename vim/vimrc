set nobackup
set number
set numberwidth=3
set printoptions=number:y
set hlsearch
set ruler
"set encoding=utf8
"set fileencoding=utf8
set showcmd

" Splits
set splitright
set splitbelow

" Indent settings. Detect filetype, or use auto & smart indent together.
filetype plugin indent on
"set autoindent
"set smartindent
""set cindent

" 256 color mode
" Don't need this. Vim reads number of colors from $TERM.
"if $COLORTERM == 'gnome-terminal'
"set t_Co=256
"endif

syntax on

" Tab settings.
set tabstop=4
set shiftwidth=4
set expandtab

" Text width, auto word wrap. 0 off.
set tw=0
"set tw=100
" Default textwidth for markdown and text files.
au BufRead,BufNewFile *.txt,*.md setlocal textwidth=100

" Disable all blinking:
set guicursor+=a:blinkon0
" Remove previous setting:
":set guicursor-=a:blinkon0
" Restore default setting:
":set guicursor&

" Disable highlighting until a search. Toggle with F12, or quick hide with ??.
let hlstate=0
nnoremap <F12> :if (hlstate == 0) \| nohlsearch \| else \| set hlsearch \| endif \| let hlstate=1-hlstate <CR>
nnoremap ?? :noh<CR>

