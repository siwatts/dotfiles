# Volume up:
bindsym $mod+equal exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym $mod+KP_Add exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym $mod+Shift+KP_Add exec --no-startup-id pactl set-sink-volume 0 +1% #increase sound volume
bindsym Control+KP_Add exec --no-startup-id pactl set-sink-volume 0 +1% #increase sound volume
bindsym $mod+Prior exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym Control+Prior exec --no-startup-id pactl set-sink-volume 0 +1% #increase sound volume
bindsym $mod+Shift+Prior exec --no-startup-id pactl set-sink-volume 0 +1% #increase sound volume
# Volume down:
bindsym $mod+minus exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym $mod+KP_Subtract exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym $mod+Shift+KP_Subtract exec --no-startup-id pactl set-sink-volume 0 -1% #decrease sound volume
bindsym Control+KP_Subtract exec --no-startup-id pactl set-sink-volume 0 -1% #decrease sound volume
bindsym $mod+Next exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym Control+Next exec --no-startup-id pactl set-sink-volume 0 -1% #decrease sound volume
bindsym $mod+Shift+Next exec --no-startup-id pactl set-sink-volume 0 -1% #decrease sound volume
# Volume mute:
bindsym $mod+KP_Enter exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym $mod+m exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
# Volume reset:
bindsym $mod+KP_Multiply exec --no-startup-id pactl set-sink-volume 0 50% # reset sound

