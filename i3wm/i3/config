# Make a custom launcher mode:
mode "launcher" {
        # These bindings trigger as soon as you enter the launcher mode
        bindsym f exec --no-startup-id firefox -private-window ; mode "default"
        bindsym w exec --no-startup-id firefox ; mode "default"
        bindsym e exec --no-startup-id thunar ; mode "default"
        bindsym g exec --no-startup-id gvim ; mode "default"
        #bindsym p exec --no-startup-id feh --randomize --bg-fill ~/Pictures/xfce-wall/* ; mode "default"

        # back to normal: Enter or Escape, or triggering shortcut
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+o mode "default"
}
bindsym $mod+o mode "launcher"

