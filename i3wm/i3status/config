# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#50fa7b" # Green
        # color_degraded = "#f1fa8c" # Yellow
        color_degraded = "#ffb86c" # Magenta (Orange)
        color_bad = "#ff79c6" # Red (Magenta)
        color_separator = "#ffb86c" # Magenta (Orange)
        interval = 1
}

#order += "ipv6"
order += "disk /"
order += "wireless _first_"
#order += "ethernet _first_"
#order += "battery all"
order += "cpu_usage"
order += "load"
order += "volume master"
order += "tztime local"

wireless _first_ {
        format_up = "Wifi%quality"
        format_down = "Wifi --"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
        format = "%d/%m/%y, %H:%M:%S"
}

cpu_usage {
        format = "CPU %usage"
        max_threshold = "75"
        format_above_threshold = "CPU %usage!!"
        degraded_threshold = "25"
        format_above_degraded_threshold = "CPU %usage"
}

volume master {
        format = "VOL %volume"
        format_muted = "VOL --%%"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
        #format = "%free (%avail)/ %total"
}
